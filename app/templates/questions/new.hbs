<div class="new-question-form">
    {{input type="text" placeholder="Your name" value=name class="name-input"}}
    {{input type="text" placeholder="Your question" id="title" value=title class="title-input"}}
    {{textarea type="text" placeholder="Question description..." id="body" value=body class="body-input" rows="4"}}
    {{input type="date" placeholder="date" value=date class="date-input"}}

    <button {{action 'addQuestion'}} class="submit">Add question</button>
</div>

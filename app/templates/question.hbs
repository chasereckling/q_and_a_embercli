<h1>{{model.title}}</h1>
<h4 class="muted">{{model.name}}, {{model.date}}</h4>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      <br>
      {{input value=model.title id="title" class="title-input"}}
    </div>

    <div class="form-group">
      <label for="body">Body:</label>
      <br>
      {{textarea value=model.body id="body" class="form-control" class="body-input" rows="4"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}

<p>{{model.body}}</p>

<button class="btn btn-xs btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-xs btn-danger" {{action 'delete'}}>delete</button>

{{/if}}

<li>{{#link-to 'answer'}}Add a answer{{/link-to}}</li>
    {{outlet}}

    {{#each answer in model.answers}}
      <ul>
        <li>{{answer.body}}</li>
        <span class="muted"> {{answer.name}}, {{answer.date}} </span>
      </ul>
    {{/each}}
